{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "console_title_template": "{{if .Root}}Admin: {{end}}{{ .Shell }} in {{ .Folder }}",
  "final_space": true,
  "palette": {
    "black": "#000000",
    "white": "#FFFFFF",
    "grey": "#CCCCCC",
    "dark_blue": "#0037DA",
    "blue": "#009FE3",
    "magenta": "#E50051",
    "purple": "#340C46",
    "gold": "#FCBF00"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground_templates": [
            "{{if contains \"windows\" .OS}}p:dark_blue{{end}}",
            "{{if contains \"ubuntu\" .OS}}#DD4814{{end}}"
          ],
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}}"
        },
        {
          "type": "shell",
          "style": "plain",
          "template": " {{ .Name }} | ",
          "properties": {
            "mapped_shell_names": {
              "pwsh": "PS"
            }
          }
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:magenta",
          "template": "{{ if .SSHSession }}ÓÆ© {{ .UserName }}@{{ .HostName }}:{{ end }}"
        },
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "<transparent,background>ÓÇ∞</>",
          "trailing_diamond": "ÓÇ∞",
          "background": "p:dark_blue",
          "foreground": "p:white",
          "template": "{{ .Path }}",
          "properties": {
            "style": "agnoster_short",
            "max_depth": 5,
            "mapped_locations": {
              "~\\Downloads": "~\\Û∞áö",
              "~\\OneDrive": "~\\Û∞èä",
              "~\\sources": "\\~Ó©®"
            },
            "display_root": true
          }
        },
        {
          "type": "dotnet",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "p:white",
          "background": "#512BD4",
          "template": " Óúå {{ .Full }}{{ .Prerelease }} "
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "p:black",
          "background": "#F05033",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FF4500{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FB{{ end }}"
          ],
          "template": " {{ .UpstreamIcon }} {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} ÔÅÑ {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} ÔÅÜ {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} ÔÉá {{ .StashCount }}{{ end }}",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": true,
            "source": "cli",
            "mapped_branches": {
              "feat/*": "üöÄ ",
              "feature/*": "üöÄ ",
              "bug/*": "üêõ ",
              "bugfix/*": "üêõ ",
              "hotfix/*": "üêõ "
            }
          }
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "leading_diamond": "<transparent,background>ÓÇ∞</>",
          "trailing_diamond": "ÓÇ∞",
          "foreground": "p:white",
          "background": "p:blue",
          "template": "{{ .FormattedMs }}",
          "properties": {
            "threshold": 500,
            "style": "austin",
            "always_enabled": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "battery",
          "style": "powerline",
          "powerline_symbol": "ÓÇ≤",
          "invert_powerline": true,
          "foreground": "p:white",
          "background": "#ffeb3b",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}#40c4ff{{end}}",
            "{{if eq \"Discharging\" .State.String}}#ff5722{{end}}",
            "{{if eq \"Full\" .State.String}}#4caf50{{end}}"
          ],
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}Ôäï ",
          "properties": {
            "discharging_icon": "Û±ü• ",
            "charging_icon": "Û∞ÇÑ ",
            "charged_icon": "Û±àë "
          }
        },
        {
          "type": "time",
          "style": "plain",
          "properties": {
            "time_format": "15:04"
          },
          "template": "[{{ .CurrentDate | date .Format}}]"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "#ffff66",
          "template": "ÔÉß"
        },
        {
          "style": "plain",
          "template": ">",
          "type": "text"
        }        
      ]
    }
  ]
}
