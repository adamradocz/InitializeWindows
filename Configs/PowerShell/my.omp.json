{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "console_title_template": "{{if .Root}}Admin: {{end}}{{ .Shell }} in {{ .Folder }}",
  "final_space": true,
  "palette": {
    "black": "#000000",
    "white": "#FFFFFF",
    "gold": "#FCBF00",
    "blue": "#009FE3",
    "magenta": "#E50051",
    "purple": "#340C46"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "template": "{{ if .SSHSession }}ÓÆ© {{ .UserName }}@{{ .HostName }}:{{ end }}"
        },
        {
          "type": "os",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "",
          "foreground_templates": [
            "{{if contains \"windows\" .OS}}#004FE1{{end}}",
            "{{if contains \"ubuntu\" .OS}}#E95420{{end}}",
            "{{if contains \"mac\" .OS}}#555555{{end}}",
            "{{if contains \"linux\" .OS}}FFCC33{{end}}",
            "{{if contains \"alpine\" .OS}}#005880{{end}}",
            "{{if contains \"android\" .OS}}#78C257{{end}}",
            "{{if contains \"debian\" .OS}}#D70A53{{end}}",
            "{{if contains \"opensuse\" .OS}}#73BA25{{end}}",
            "{{if contains \"raspbian\" .OS}}#C51A4A{{end}}",
            "{{if contains \"redhat\" .OS}}#EE0000{{end}}"
          ],
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}}"
        },
        {
          "type": "shell",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": " {{ .Name }} ",
          "properties": {
            "mapped_shell_names": {
              "pwsh": "PS"
            }
          }
        },
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "<background,transparent>ÓÇ∂</>",
          "trailing_diamond": "ÓÇ∞",
          "background": "p:magenta",
          "foreground": "p:white",
          "template": "{{ .Path }}",
          "properties": {
            "style": "agnoster_short",
            "max_depth": 5,
            "mapped_locations": {
              "~\\Downloads": "~\\Û∞áö",
              "~\\OneDrive": "~\\Û∞èä",
              "~\\sources": "~\\Ó©®"
            },
            "display_root": true
          }
        },
        {
          "type": "dotnet",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "p:white",
          "background": "#512BD4",
          "template": " Óúå {{ .Full }}{{ .Prerelease }}"
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "p:black",
          "background": "#F05033",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FF4500{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FB{{ end }}"
          ],
          "template": " {{ .UpstreamIcon }} {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} ÔÅÑ {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} ÔÅÜ {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} ÔÉá {{ .StashCount }}{{ end }}",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": true,
            "source": "cli",
            "mapped_branches": {
              "feat/*": "üöÄ ",
              "feature/*": "üöÄ ",
              "bug/*": "üêõ ",
              "bugfix/*": "üêõ ",
              "hotfix/*": "üêõ "
            }
          }
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "leading_diamond": "<transparent,background>ÓÇ∞</>",
          "trailing_diamond": "ÓÇ∞",
          "foreground": "p:white",
          "background": "p:blue",
          "template": "{{ .FormattedMs }}",
          "properties": {
            "threshold": 200,
            "style": "austin",
            "always_enabled": false
          }
        },
        {
          "type": "status",
          "style": "diamond",
          "leading_diamond": "<transparent,background>ÓÇ∞</>",
          "trailing_diamond": "ÓÇ¥",
          "foreground": "p:black",
          "background": "#00897B",
          "background_templates": [
            "{{ if .Error }}#E91E63{{ end }}"
          ],
          "template": " {{ if eq .Code 0 }}Û∞∏û{{ else }}Ôê° {{ reason .Code }}{{ end }}",
          "properties": {
            "always_enabled": false
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "battery",
          "style": "diamond",
          "leading_diamond": "ÓÇ≤",
          "foreground": "p:white",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}#40c4ff{{end}}",
            "{{if eq \"Discharging\" .State.String}}#ff5722{{end}}",
            "{{if eq \"Full\" .State.String}}#4caf50{{end}}"
          ],
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}Ôäï ",
          "properties": {
            "discharging_icon": "Û±ü• ",
            "charging_icon": "Û∞ÇÑ ",
            "charged_icon": "Û±àë "
          }
        },
        {
          "type": "time",
          "style": "plain",
          "properties": {
            "time_format": "15:04"
          },
          "template": " {{ .CurrentDate | date .Format}}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "#FFFF66",
          "template": "ÔÉß"
        },
        {
          "type": "text",
          "style": "plain",
          "template": "Û∞ÖÇ"       
        }        
      ]
    }
  ]
}
