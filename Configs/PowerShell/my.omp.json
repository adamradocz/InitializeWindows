{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "console_title_template": "{{if .Root}}Admin: {{end}}{{ .Shell }} in {{ .Folder }}",
  "final_space": true,
  "palette": {
    "black": "#000000",
    "white": "#FFFFFF"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#3A86FF",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} |"
        },
        {
          "type": "session",
          "style": "diamond",
          "trailing_diamond": "î‚°",
          "template": "{{ if .SSHSession }}î®© {{ .UserName }}@{{ .HostName }}{{ end }}"
        },
        {
          "type": "path",
          "template": " {{ .Path }}",
          "style": "diamond",
          "trailing_diamond": ">",
          "properties": {
            "style": "agnoster_short",
            "max_depth": 5,
            "mapped_locations": {
              "C:\\temp": "îž™"
            },
            "display_root": true
          }
        },
        {
          "type": "dotnet",
          "style": "powerline",
          "powerline_symbol": "î‚°",
          "foreground": "p:white",
          "background": "#512BD4",
          "template": " îœŒ {{ .Full }}{{ .Prerelease }} "
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "î‚°",
          "foreground": "#193549",
          "background": "#ffeb3b",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFEB3B{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FB{{ end }}"
          ],
          "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "source": "cli",
            "mapped_branches": {
              "feat/*": "ðŸš€ ",
              "feature/*": "ðŸš€ ",
              "bug/*": "ðŸ› ",
              "bugfix/*": "ðŸ› ",
              "hotfix/*": "ðŸ› "
            }
          }
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "î‚°",
          "foreground": "p:white",
          "background": "#0087D8",
          "template": " ï”  {{ .FormattedMs }} ",
          "properties": {
            "threshold": 500,
            "style": "austin",
            "always_enabled": true
          }
        },
        {
          "type": "root",
          "style": "powerline",
          "powerline_symbol": "î‚°",
          "foreground": "p:black",
          "background": "#ffff66",
          "template": "ïƒ§"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "battery",
          "style": "powerline",
          "powerline_symbol": "î‚²",
          "invert_powerline": true,
          "foreground": "p:white",
          "background": "#ffeb3b",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}#40c4ff{{end}}",
            "{{if eq \"Discharging\" .State.String}}#ff5722{{end}}",
            "{{if eq \"Full\" .State.String}}#4caf50{{end}}"
          ],
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}ïŠ• ",
          "properties": {
            "discharging_icon": "ó±Ÿ¥ ",
            "charging_icon": "ó°‚„ ",
            "charged_icon": "îˆ¯ "
          }
        },
        {
          "type": "time",
          "style": "plain",
          "properties": {
            "time_format": "15:04:05"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "shell",
          "style": "plain",
          "template": "{{ .Name }}>",
          "properties": {
            "mapped_shell_names": {
              "pwsh": "PS"
            }
          }
        }
      ]
    }
  ]
}
